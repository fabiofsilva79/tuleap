<section class="account-registration">
    <h1 class="accont-registration-creation-title">{{ title }}</h1>

    <form action="{{ form_url }}" class="tlp-card account-registration-form" method="post">
        {{# prefill_values }}
            {{# form_loginname }}
                <div class="tlp-form-element {{# has_error }}tlp-form-element-error{{/ has_error }}">
                    <label class="tlp-label" for="form_loginname">
                        {{# gettext }}Login name{{/ gettext }}
                        <i class="fa-solid fa-asterisk" aria-hidden="true"></i>
                    </label>
                    <input type="text"
                           class="tlp-input"
                           id="form_loginname"
                           name="form_loginname"
                           placeholder="jdoe"
                           value="{{ value }}"
                           required
                           autocomplete="username"
                           pattern="^[a-zA-Z][a-zA-Z0-9\-_\.]{2,}$"
                           data-test="user-login"
                    >
                    {{# has_error }}
                        <p class="tlp-text-danger">{{ error }}</p>
                    {{/ has_error }}
                </div>
            {{/ form_loginname }}
        {{/ prefill_values }}
