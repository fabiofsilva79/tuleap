<p>{{# gettext }}Hello,{{/ gettext }}</p>

<p>
    {{# project_name }}
        {{# gettext }}
            %1$s invited you to register to %2$s and join the project %3$s. |
            {{ from_user_real_name }} |
            {{ instance_name }} |
            {{ project_name }}
        {{/ gettext }}
    {{/project_name}}
    {{^ project_name }}
        {{# gettext }}
            %1$s invited you to register to %2$s. |
            {{ from_user_real_name }} |
            {{ instance_name }}
        {{/ gettext }}
    {{/ project_name }}
    {{# resent_user_real_name }}
        <br>
        {{# gettext }}
            You may have seen the invitation before but %s just sent you a reminder to join. |
            {{ resent_user_real_name }} |
        {{/ gettext }}
    {{/ resent_user_real_name }}
</p>

<p>
    {{# gettext }}To sign up:{{/ gettext }}
    <br>
    <a href="{{ register_url }}">{{ register_url }}</a>
</p>


{{# has_custom_message }}
    <p>
        {{# gettext }}
            Message from %s: |
            {{ from_user_real_name }}
        {{/ gettext }}
    </p>
    <blockquote>{{ custom_message }}</blockquote>
{{/has_custom_message}}

<p>
    {{# gettext }}Best regards,{{/ gettext }}
    <br>
    {{# gettext }}The %s team. | {{ instance_name }}{{/ gettext }}
</p>
