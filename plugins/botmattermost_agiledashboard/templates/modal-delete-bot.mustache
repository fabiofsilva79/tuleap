<div id="admin-config-bot-delete"
    class="tlp-modal tlp-modal-danger"
    role="dialog"
    aria-labelledby="admin-config-bot-delete-title"
    aria-hidden="true"
>
    <div class="tlp-modal-header">
          <h1 class="tlp-modal-title" id="admin-config-bot-delete-title">
              {{ modal_delete_title }}
          </h1>
          <button class="tlp-modal-close" type="button" data-dismiss="modal" aria-label="Close">
              <i class="fas fa-times tlp-modal-close-icon" aria-hidden="true"></i>
          </button>
      </div>

    <div class="tlp-modal-body">
        <p>{{ modal_delete_content }}</p>
    </div>

    <div class="tlp-modal-footer">
        <form method="POST" action="/plugins/botmattermost_agiledashboard/?action=delete_bot">
            {{# csrf_token }}
                {{> csrf_token_input }}
            {{/ csrf_token }}
            <input type="hidden" name="group_id" value="{{ project_id }}" />
            <input type="hidden" name="bot_id" value="{{ id }}">

            <button type="button" class="tlp-button-danger tlp-button-outline tlp-modal-action" data-dismiss="modal">
                {{ button_close }}
            </button>
            <button type="submit" class="tlp-button-danger tlp-modal-action">
                <i class="fa fa-trash-o tlp-button-icon"></i>{{ button_delete }}
            </button>
        </form>
    </div>
</div>
